<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg">

    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15sp"
        android:layout_marginStart="15sp"
        android:id="@+id/toMenu"
        android:src="@drawable/back_button"
        tools:ignore="ContentDescription"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/toMenu"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20sp"
        android:layout_marginStart="20sp"
        android:text="@string/question_1"
        android:textSize="23sp"
        android:id="@+id/question"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300sp"
        android:layout_height="300sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30sp"
        android:layout_marginBottom="20sp"
        android:adjustViewBounds="true"/>

    <ImageView
        android:id="@+id/note_1"
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintEnd_toStartOf="@id/note_2"
        android:layout_marginTop="70sp"
        app:layout_constraintBottom_toTopOf="@id/note_4"
        app:srcCompat="@drawable/note" />

    <ImageView
        android:id="@+id/note_2"
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:layout_constraintStart_toEndOf="@id/note_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/note_5"
        app:layout_constraintEnd_toStartOf="@id/note_3"
        android:layout_marginTop="70sp"
        app:srcCompat="@drawable/note" />

    <ImageView
        android:id="@+id/note_3"
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:layout_constraintStart_toEndOf="@id/note_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/note_6"
        android:layout_marginTop="70sp"
        android:layout_marginEnd="20sp"
        app:srcCompat="@drawable/note" />

    <ImageView
        android:id="@+id/note_4"
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/note_1"
        app:layout_constraintEnd_toStartOf="@id/note_5"
        app:srcCompat="@drawable/note" />

    <ImageView
        android:id="@+id/note_5"
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:layout_constraintStart_toEndOf="@id/note_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/note_2"
        app:layout_constraintEnd_toStartOf="@id/note_6"
        app:srcCompat="@drawable/note" />

    <ImageView
        android:id="@+id/note_6"
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:layout_constraintStart_toEndOf="@id/note_5"
        app:layout_constraintTop_toBottomOf="@id/note_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20sp"
        app:srcCompat="@drawable/note" />

</androidx.constraintlayout.widget.ConstraintLayout>