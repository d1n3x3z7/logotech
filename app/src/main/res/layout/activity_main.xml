<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/minigame_2"
        android:src="@drawable/logo"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"

        android:id="@+id/minigame_1"

        android:importantForAccessibility="no"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/minigame_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginStart="150sp"
        android:layout_marginTop="100sp"
        android:src="@drawable/game_1"
        />

    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"

        android:id="@+id/minigame_2"

        android:importantForAccessibility="no"
        app:layout_constraintLeft_toRightOf="@id/minigame_1"
        app:layout_constraintRight_toLeftOf="@id/minigame_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginTop="100sp"
        android:src="@drawable/game_2"
        />

    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"

        android:id="@+id/minigame_3"
        android:importantForAccessibility="no"
        app:layout_constraintLeft_toRightOf="@id/minigame_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginEnd="150sp"
        android:layout_marginTop="100sp"
        android:src="@drawable/game_3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>