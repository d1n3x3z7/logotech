<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:id="@+id/menu_1">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="760dp"
        android:layout_marginBottom="333dp"
        android:id="@+id/toMenu"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/toGameRandom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toGame_S_SH"
        android:src="@drawable/random"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/toGame_S_SH"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/toGameRandom"
        app:layout_constraintEnd_toStartOf="@id/toGame_L_R"
        android:src="@drawable/shh"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/toGame_L_R"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/toGame_S_SH"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/lr"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>